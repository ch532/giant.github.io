<div id="product-container"></div>

<script>
  fetch('path-to-your-api-or-json.json')  // Replace with actual API or local JSON path
    .then(response => response.json())
    .then(data => {
      const product = data.resp_result.result.products[0]; // Display first product only

      const html = `
        <div style="border: 1px solid #ccc; padding: 15px; max-width: 300px; font-family: sans-serif;">
          <img src="${product.product_main_image_url}" alt="Product Image" style="width: 100%; border-radius: 8px;">
          <h3 style="font-size: 16px; margin: 10px 0;">${product.product_title}</h3>
          <p><strong>Price:</strong> $${product.sale_price} <del>$${product.original_price}</del></p>
          <p style="color: green;"><strong>Discount:</strong> ${product.discount}</p>
          <p><strong>Store:</strong> ${product.shop_name}</p>
          <a href="${product.promotion_link}" target="_blank" style="display: inline-block; margin-top: 10px; padding: 10px; background: gold; color: black; text-decoration: none; border-radius: 5px;">Buy Now</a>
        </div>
      `;

      document.getElementById('product-container').innerHTML = html;
    })
    .catch(err => console.error('Failed to load product:', err));
</script>
